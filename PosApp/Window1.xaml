<Window x:Class="PosApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PosApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Window1" Height="550" Width="1000">
    <Grid>
        <Grid>

            <Label Content="Search" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="229" FontSize="14" 
                FontWeight="Bold" />
            <TextBox x:Name="txtBarcode" HorizontalAlignment="Left" Margin="15,37,0,0" TextWrapping="Wrap" Text="Product ID" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="txtQty" HorizontalAlignment="Left" Margin="146,38,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="79"/>
            <Button x:Name="AddTo_CartBtn" HorizontalAlignment="Left" Margin="236,38,0,0" VerticalAlignment="Top" Width="126" Height="18" Click="BtnAddToCart_Click" Content="Add To Cart" FontWeight="Bold"/>
            <Label Content="Cart&#xA;" HorizontalAlignment="Left" Margin="15,83,0,0" VerticalAlignment="Top" Width="294" Height="27" FontSize="14" 
                FontWeight="Bold"/>



            <Label Content="Order Summary" HorizontalAlignment="Left" Height="29" Margin="539,17,0,0" VerticalAlignment="Top" Width="291" FontSize="14" FontWeight="Bold"/>
            <Label Content="Total : Ksh" HorizontalAlignment="Left" Height="31" Margin="539,46,0,0" VerticalAlignment="Top" Width="94"/>
            <TextBox x:Name="txtTotal" HorizontalAlignment="Left" Margin="648,46,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="137" Height="31" Cursor="No" IsEnabled="False" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Height="0" Margin="585,110,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="6" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="32.089"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBox x:Name="txtPayment" HorizontalAlignment="Left" Height="28" Margin="648,101,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="137" FontWeight="Bold"/>
            <Label Content="Paid: Ksh" HorizontalAlignment="Left" Height="28" Margin="539,101,0,0" VerticalAlignment="Top" Width="94"/>
            <Button Content="Complete Sale" Background="#4CAF50" Foreground="White" HorizontalAlignment="Left" Height="42" Margin="539,166,0,0" VerticalAlignment="Top" Width="246" Click="BtnCompleteSale_Click"/>
            <DataGrid x:Name="dataGridCart1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,115,545,0" AutoGenerateColumns="True" 
                AlternatingRowBackground="#F3F3F3"
                Background="White" Height="325" VerticalAlignment="Top"/>
            <TextBox x:Name="txtChange" HorizontalAlignment="Left" Height="28" Margin="545,231,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="238" IsEnabled="False" FontWeight="Bold"/>
        </Grid>

    </Grid>
</Window>
