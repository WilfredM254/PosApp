<Window x:Class="PosApp.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="500" Width="400"   ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" MinHeight="350" MinWidth="350"
        Icon="logo4.ico">

    <Grid Background="#F4F4F4">
        <StackPanel Margin="20" VerticalAlignment="Center">

            <!-- Title -->
            <TextBlock Text="Create Account" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Username Label and TextBox -->
            <TextBlock Text="Username:" FontSize="14" FontWeight="Bold" Margin="0,0,0,0" Foreground="#333333"/>
            <TextBox Name="UsernameTextBox" Width="300" Height="30" Margin="0,0" Padding="0"
                     FontSize="14" BorderBrush="#4CAF50" BorderThickness="2" KeyUp="Username_TextBox_KeyUp"/>

            <!-- Password Label and PasswordBox -->
            <TextBlock Text="Password:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
            <PasswordBox Name="PasswordBox" Width="300" Height="40" Margin="0,0" Padding="10"
                         FontSize="14" BorderBrush="#4CAF50" BorderThickness="2" KeyUp="Pwd_TextBox_KeyUp"/>

            <!-- Role Label and ComboBox -->
            <TextBlock Text="Staff Member:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
            <ComboBox Name="StaffMember_ComboBox" Width="300" Height="30" Margin="0,0"
          FontSize="14" Background="#FFFFFF" BorderBrush="#4CAF50" BorderThickness="2" ItemsSource="{Binding StaffList}" DisplayMemberPath="FullName" SelectedValuePath="FullName">
            </ComboBox>
            
            
            
            <!-- Role Label and ComboBox -->
            <TextBlock Text="Role:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="#333333"/>
            <ComboBox Name="RoleComboBox" Width="300" Height="30" Margin="0,0"
                      FontSize="14" Background="#FFFFFF" BorderBrush="#4CAF50" BorderThickness="2">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="Cashier" />
            </ComboBox>

            <!-- Submit Button -->
            <Button Name="AddUserButton" Width="300" Height="40" Margin="0,20" FontSize="16" Background="#4CAF50"
                    Foreground="White" Content="Add User" HorizontalAlignment="Center" Padding="10,0"
                    BorderBrush="#4CAF50" BorderThickness="2" Click="AddUserButton_Click"/>

            <!-- Error Message -->
            <TextBlock Name="ErrorMessage" Foreground="Red" FontSize="14" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
