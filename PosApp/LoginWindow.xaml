<Window x:Class="PosApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="logo4.ico">
    <Grid Background="#f3f3f3">
        <!-- Title -->
        <TextBlock Text="POS System Login" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Foreground="darkgreen"
                   Margin="0,30,0,0"/>

        <!-- Username Label and TextBox -->
        <TextBlock Text="Username:" 
                   FontSize="14" 
                   Margin="50,100,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"/>
        <TextBox Name="txtUsername" 
                 Width="250" 
                 Height="30" 
                 Margin="130,95,0,0" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top"
                 KeyUp="Username_TextBox_KeyUp"/>

        <!-- Password Label and PasswordBox -->
        <TextBlock Text="Password:" 
                   FontSize="14" 
                   Margin="50,150,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"/>
        <PasswordBox Name="txtPassword" 
                     Width="250" 
                     Height="30" 
                     Margin="130,145,0,0" 
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top"
                     KeyUp="Pwd_TextBox_KeyUp"/>

        <!-- Login Button -->
        <Button Content="Login" 
                Width="100" 
                Height="40" 
                Margin="0,210,0,0" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Background="#0078D7" 
                Foreground="White" 
                FontWeight="Bold" 
                Click="BtnLogin_Click"/>
    </Grid>
</Window>
