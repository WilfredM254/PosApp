<Window x:Class="PosApp.AddStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Staff Member" Height="500" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Icon="logo4.ico">
    <Grid Margin="10">
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Heading -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Left Column -->
            <ColumnDefinition Width="*"/>
            <!-- Right Column -->
        </Grid.ColumnDefinitions>

        <!-- Heading -->
        <TextBlock Text="Add New Staff Member" Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        
        
        <!-- Left Form -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <!-- Full Name -->
            <TextBlock Text="Full Name" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="FullNameTextBox" KeyUp="Fullname_TextBox_KeyUp" Margin="0,0,0,10"/>

            <!-- National ID -->
            <TextBlock Text="National ID" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="NationalIDTextBox" KeyUp="NationalID_TextBox_KeyUp" Margin="0,0,0,10"/>

            <!-- Phone -->
            <TextBlock Text="Phone" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="PhoneTextBox" KeyUp="Phone_TextBox_KeyUp" Margin="0,0,0,10"/>


            <!-- Email -->
            <TextBlock Text="Email" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="EmailTextBox" KeyUp="Email_TextBox_KeyUp" Margin="0,0,0,10"/>
        </StackPanel>
        
        
        

        <!-- Right Form -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            

            <!-- Date of Birth -->
            <TextBlock Text="Date of Birth" FontWeight="Bold" Margin="0,10,0,5"/>
            <DatePicker Name="DOBDatePicker" Margin="0,0,0,10"/>

            <!-- Home Address -->
            <TextBlock Text="Home Address" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="HomeAddressTextBox" KeyUp="HomeAddress_TextBox_KeyUp" Margin="0,0,0,10"/>

            <!-- Home Country -->
            <TextBlock Text="Home Country" FontWeight="Bold" Margin="0,10,0,5"/>
            <ComboBox Name="HomeCountryComboBox" KeyUp="Country_TextBox_KeyUp" Margin="0,0,0,10">
                
            </ComboBox>
        </StackPanel>


        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" 
            HorizontalAlignment="Center" Margin="0,0,0,0">
            <TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Visibility="Collapsed" 
                   VerticalAlignment="Top" Margin="0,0,0,0" FontSize="14" FontWeight="bold" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Margin="10,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="100" Margin="10,0,10,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
