<Window x:Class="PosApp.CashierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PosApp"
        Title="Cashier Dashboard"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F9F9F9"
        Icon="logo4.ico">
    <Grid>
        <!-- Header -->
        <DockPanel Background="#0078D7" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Cashier Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"/>
            <Button Content="Logout" 
                Background="#FF5252" 
                Foreground="White" 
                FontWeight="Bold" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right" 
                Margin="10" 
                Click="BtnLogout_Click" DockPanel.Dock="Right"/>



            <TextBox Name="LoggedInUserTextBox" 
                 IsReadOnly="True" 
Background="#ab9c99" 
Foreground="black" 
FontWeight="Bold" 
Width="100" 
Height="30" 
HorizontalAlignment="Right" 
Margin="10" 
Text="{Binding Source={x:Static local:UserSession.DisplayLoggedInUser}, Mode=OneWay}"                
DockPanel.Dock="Right"/>

        </DockPanel>

        <!-- Main Layout -->
        <Grid Margin="2,62,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>



            <!-- Product Scanning Section -->
            <StackPanel Grid.Column="0" Margin="10" Background="White">
                <Grid Margin="0">
                    <TextBlock Text="Scan Product" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold" Margin="0,0,0,0" Width="133"/>
                    <TextBlock Text="Qty" FontSize="16" HorizontalAlignment="Left" FontWeight="Bold" Margin="146,0,0,0" Width="133"/>
                </Grid>

                <Grid Margin="0">
                    <TextBox x:Name="txtBarcode" KeyUp="Barcode_TextBox_KeyUp" HorizontalAlignment="Left" Margin="3,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="txtQty" KeyUp="QTy_TextBox_KeyUp" HorizontalAlignment="Left" Margin="146,5,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="79"/>
                    <Button x:Name="AddTo_CartBtn" HorizontalAlignment="Left" Margin="258,6,0,0" Width="126" Click="BtnAddToCart_Click" Content="Add To Cart" FontWeight="Bold" Foreground="green" />
                </Grid>

                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="484*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="itemSearched_Display" Text="Select item" HorizontalAlignment="Left" FontSize="14" FontWeight="Normal" Margin="8,0,0,19" Width="555" Grid.ColumnSpan="3"/>
                </Grid>
                <TextBlock Text="Cart" FontSize="16" FontWeight="Bold"/>

                <!-- Product Cart -->
                <DataGrid Name="dataGridCart" 
                          AutoGenerateColumns="True" 
                          AlternatingRowBackground="#F3F3F3"
                          Background="White"
                          BorderBrush="#E0E0E0"
                          BorderThickness="1"
                          Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Summary and Checkout Section -->
            <StackPanel Grid.Column="1" Margin="10,2,-17,18" Background="#F9F9F9">
                <TextBlock Text="Order Summary" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Total Display -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Total: Ksh " FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Name="txtTotal" Text="0.00" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Payment Section -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Paid: Ksh " FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Name="txtPayment" Width="213"  Height="30" Text="0.0" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                </StackPanel>


                <Button Content="Complete Sale" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Width="150" 
                        Height="40" 
                        Click="BtnCompleteSale_Click"/>

                <!-- Feedback -->
                <TextBlock Name="txtChange" 
                           Text="" 
                           FontSize="14" 
                           Foreground="#4CAF50" 
                           Margin="0,20,0,0"/>


                <Grid>
                    <Button Content="Remove Selected" 
                        Background="#db944d" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Margin="20 100 0 0"
                        Width="100" 
                        Height="30" 
                        HorizontalAlignment="Left" 
                        Click="BtnRemoveFromCart_Click"/>

                    <Button Content="Clear Cart" 
        Background="#FF5252" 
        Foreground="White" 
        FontWeight="Bold" 
        Margin="140,100,0,0"
        Width="100" 
        Height="30" 
                        HorizontalAlignment="Left" 
        Click="BtnClearCart_Click"/>
                </Grid>


            </StackPanel>
        </Grid>
    </Grid>
</Window>
