<Window x:Class="PosApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PosApp"
        Title="Admin Dashboard" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f9f9f9"
        Icon="logo4.ico">
    <Grid>
        <!-- Header -->
        <DockPanel Background="#0078D7" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Admin Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"/>


            <TextBox Name="LoggedInUserTextBox" 
                     IsReadOnly="True" 
    Background="#ab9c99" 
    Foreground="black" 
    FontWeight="Bold" 
    Width="100" 
    Height="30" 
    HorizontalAlignment="Right" 
    Margin="10" 
    Text="{Binding Source={x:Static local:UserSession.DisplayLoggedInUser}, Mode=OneWay}"                
    DockPanel.Dock="Right"/>



            <Button Content="Logout" 
                Background="#FF5252" 
                Foreground="White" 
                FontWeight="Bold" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right" 
                Margin="10" 
                Click="BtnLogout_Click" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Main Content Area -->
        <TabControl Margin="10,70,10,10">
            <!-- Products Management Tab -->
            <TabItem Header="Manage Products">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Products Table -->
                    <DataGrid Name="dataGridProducts" 
                              Grid.Column="0" 
                              Margin="10" 
                              AutoGenerateColumns="True" 
                              IsReadOnly="True" 
                              AlternatingRowBackground="#F3F3F3"
                              Background="White"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"
                              SelectionChanged="ProductsDataGrid_SelectionChanged"/>



                    <!-- Product Management Panel -->
                    <StackPanel Grid.Column="1" Margin="10" Background="#F9F9F9">
                        <TextBlock Text="Product Management" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <TextBox Name="txtProductID" 
         Width="200" 
         Height="30" 
         Text="Product ID" 
         Margin="0,0,0,10" IsEnabled="False"/>

                        <TextBox Name="txtProductName" 
                                 Width="200" 
                                 Height="30" 
                                 Text="Product Name" 
                                 Margin="0,0,0,10"/>
                        <TextBox Name="txtProductPrice" 
                                 Width="200" 
                                 Height="30" 
                                 Text="Price" 
                                 Margin="0,0,0,10"/>
                        <TextBox Name="txtProductStock" 
                                 Width="200" 
                                 Height="30" 
                                 Text="Stock" 
                                 Margin="0,0,0,20"/>

                        <Button Content="Add New Product" 
                                Background="#0078D7" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                Width="200" 
                                Height="40" 
                                Margin="0,0,0,10" 
                                Click="BtnAddProduct_Click"/>
                        <Button Content="Edit Selected" 
                                Background="#FFC107" 
                                Foreground="Black" 
                                FontWeight="Bold" 
                                Width="200" 
                                Height="40" 
                                Margin="0,0,0,10" 
                                Click="BtnEditProduct_Click"/>
                        <Button Content="Delete Selected" 
                                Background="#FF5252" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                Width="200" 
                                Height="40" 
                                Click="BtnDeleteProduct_Click"/>



                        <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" FontWeight="Bold" Height="14" TextWrapping="Wrap" Text="TextBlock" Width="200" Margin="0 50 0 0" Visibility="Hidden"/>
                    </StackPanel>
                </Grid>
            </TabItem>




            <!-- Sales Reports Tab -->
            <TabItem Header="Sales Reports">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="19*"/>
                        <ColumnDefinition Width="703*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="4">
                        <TextBlock Text="Sales Reports" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,20"/>

                        <!-- Date Range Selection -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Name="dpStartDate" Margin="0,0,20,0"/>
                            <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Name="dpEndDate"/>
                        </StackPanel>

                        <!-- Generate Report Button -->
                        <Button Content="Generate Report" 
                                Background="#0078D7" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                Width="150" 
                                Margin="0,0,0,20" 
                                Click="BtnGenerateReport_Click"/>

                        <!-- Sales Report Table -->
                        <DataGrid Name="dataGridSalesReports" 
                                  Margin="0" 
                                  AutoGenerateColumns="True" 
                                  IsReadOnly="True" 
                                  AlternatingRowBackground="#F3F3F3"
                                  Background="White"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"/>

                    </StackPanel>
                </Grid>
            </TabItem>







            <!-- Staff Management Tab -->
            <TabItem Header="Staff Members">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Products Table -->
                    <DataGrid Name="dataGrid_StaffMembers" 
               Grid.Column="0" 
               Margin="10" 
               AutoGenerateColumns="True" 
               IsReadOnly="True" 
               AlternatingRowBackground="#F3F3F3"
               Background="White"
               BorderBrush="#E0E0E0"
               BorderThickness="1"/>




                    <!-- Users Management Panel -->
                    <StackPanel Grid.Column="1" Margin="10" Background="#F9F9F9">
                        <TextBlock Text="Staff Management" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Margin="0,0,0,10"/>


                        <Button Content="Add Staff" 
     Background="#0078D7" 
     Foreground="White" 
     FontWeight="Bold" 
     Width="200" 
     Height="40" 
     Margin="0,0,0,10" 
     Click="AddStaffMembersButton_Click"/>




                        <Button Content="Refresh" 
Background="#0078D7" 
Foreground="White" 
FontWeight="Bold" 
Width="200" 
Height="40" 
Margin="0,0,0,10" 
Click="RefreshStaffMembersButton_Click"/>


                        <Button Content="Edit Selected" 
     Background="#FFC107" 
     Foreground="Black" 
     FontWeight="Bold" 
     Width="200" 
     Height="40" 
     Margin="0,0,0,10" 
     Click="BtnEditProduct_Click"/>


                        <Button Content="Delete Selected" 
     Background="#FF5252" 
     Foreground="White" 
     FontWeight="Bold" 
     Width="200" 
     Height="40" 
     Click="BtnDeleteProduct_Click"/>


                    </StackPanel>
                </Grid>
            </TabItem>









            <!-- Products Management Tab -->
            <TabItem Header="Users Accounts">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*"/>
                        <ColumnDefinition Width="61*"/>
                        <ColumnDefinition Width="86*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Products Table -->
                    <DataGrid Name="dataGridUsers" 
                  Grid.Column="0" 
                  Margin="10,10,10,10" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True" 
                  AlternatingRowBackground="#F3F3F3"
                  Background="White"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1" Grid.ColumnSpan="2"/>




                    <!-- Users Management Panel -->
                    <StackPanel Grid.Column="2" Margin="10,10,10,10" Background="#F9F9F9">
                        <TextBlock Text="Users Management" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>


                        <Button Content="Add User" 
        Background="#0078D7" 
        Foreground="White" 
        FontWeight="Bold" 
        Width="200" 
        Height="40" 
        Margin="0,0,0,10" 
        Click="AddUserButton_Click"/>


                        <Button Content="Refresh" 
Background="lightgreen" 
Foreground="White" 
FontWeight="Bold" 
Width="200" 
Height="40" 
Margin="0,0,0,10" 
Click="RefreshUserButton_Click"/>


                        <Button Content="Edit Selected" 
        Background="#FFC107" 
        Foreground="Black" 
        FontWeight="Bold" 
        Width="200" 
        Height="40" 
        Margin="0,0,0,10" 
        Click="BtnEditProduct_Click"/>


                        <Button Content="Delete Selected" 
        Background="#FF5252" 
        Foreground="White" 
        FontWeight="Bold" 
        Width="200" 
        Height="40" 
        Click="BtnDeleteProduct_Click"/>


                    </StackPanel>
                </Grid>
            </TabItem>



        </TabControl>
    </Grid>
</Window>
